{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block play_area %}
<div class="well col-sm-6 col-sm-offset-3">
    <h2>Connexion:</h2>
    {% if error %}
        <div class="">
            <p class="bg-danger warner">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-sm-6">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-sm-6">
                <input  class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="col-sm-offset-4 col-sm-6">
                <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div>
    </form>
 </div>
{% endblock %}
