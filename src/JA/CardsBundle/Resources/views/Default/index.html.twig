{% extends('::base.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/game.css') }}"/>
{% endblock %}

{% block play_area %}
<div id="play-area" class="col-md-9">
    <div id="toolbar">
        <div id="decker" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> new deck</div>
        <div id="clearer" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> clear deck</div>
        <div id="stacker" class="btn btn-info stack-open"><i class="glyphicon glyphicon-resize-small"></i> <span>stack</span></div>
        <div id="flipper" class="btn btn-info hide"><i class="glyphicon glyphicon-refresh"></i> flip cards</div>
        <div id="sorter" class="btn btn-info"><i class="glyphicon glyphicon-sort-by-attributes"></i> sort cards</div>
        <div id="slide-wrap"><small><b>Resize cards</b></small><br/><div id="resizer"></div></div>
    </div>
    <div id="revolution" class="hide">
        <div class="rev-title">REVOLUTION?</div>
        <div class="status">Le mode r√©volution est <div class="status-off">inactif !</div></div>
        <div class="ask">Souhaitez-vous l'activer ?</div>
        <br/><br/>
        <div class="btn-group" role="group" aria-label="...">
            <div type="button" class="close-rev btn btn-lg btn-success">Oui</div>
            <div type="button" class="close-rev btn btn-lg btn-danger">Non</div>
        </div>
        <br/><br/>
    </div>
    <div id="play-zone">
        <div id="flop"></div>
        <div id="play-button" class="hide btn btn-success btn-lg">PLAY !</div>
    </div>
    <div id="south" class="deck">
    </div>
</div>
<div id="right-bar" class="col-sm-3">
    <div id="opponents">
        <b class="white-text">{{ game.player2 }}</b>
        <div id="north" class="deck subdeck">
        </div>
        <b class="white-text">{{ game.player3 }}</b>
        <div id="east" class="deck subdeck">
        </div>
        <b class="white-text">{{ game.player4 }}</b>
        <div id="west" class="deck subdeck">
        </div>
    </div>
    <div id="chat">

